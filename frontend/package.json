{
  "manifest_version": 3,
  "name": "ProductivityTracker",
  "version": "1.0",
  "description": "Track time spent on websites and analyze productivity",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "background"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Productivity Tracker"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "http://localhost:3000/*"
  ]
}